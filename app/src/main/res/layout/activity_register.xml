<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/Coklat"
    android:layout_height="match_parent"
    tools:context=".register">
  <LinearLayout
      android:background="@drawable/baground"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="330dp">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
  </LinearLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_marginTop="15dp"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <EditText
        android:textStyle="bold"
        android:textColorHint="@color/abu"
        android:paddingBottom="35dp"
        android:hint="User Name"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/kolomregis"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <EditText
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColorHint="@color/abu"
        android:paddingBottom="35dp"
        android:hint="Email"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/kolomregis"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <EditText

        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColorHint="@color/abu"
        android:paddingBottom="35dp"
        android:hint="No phone"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/kolomregis"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <EditText
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColorHint="@color/abu"
        android:paddingBottom="35dp"
        android:hint="Passwerd"
        android:password=""
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/kolomregis"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <Button
        android:textSize="17dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="Register"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:background="@drawable/tombol"
        android:layout_height="50dp"
        android:layout_width="80dp"/>
    <TextView
        android:layout_marginLeft="31dp"
        android:layout_marginTop="13dp"
        android:textColor="@color/tombil"
        android:text="Sign in with"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

  </LinearLayout>
  <LinearLayout
      android:gravity="center"
      android:orientation="horizontal"
      android:layout_height="match_parent"
      android:layout_width="match_parent">
    <ImageView
        android:layout_marginRight="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/facebook"
        android:layout_width="25dp"
        android:layout_height="25dp"/>
    <ImageView
        android:adjustViewBounds="true"
        android:src="@drawable/twitter"
        android:layout_width="25dp"
        android:layout_height="25dp"/>
    <ImageView
        android:layout_marginLeft="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/google"
        android:layout_width="25dp"
        android:layout_height="25dp"/>
  </LinearLayout>
</LinearLayout>